<Window x:Class="PL_GUI.DataLeakageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_GUI"
        mc:Ignorable="d"
        Title="DataLeakageWindow" Height="400" Width="400">
    <Window.Resources>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="Open_File"  Margin="10,37,308.2,310.8" Click="Open_File_Left_Button_Click"  RenderTransformOrigin="0.5,0.5" Content="Open File" />
        <Button x:Name="Back_To_Main_Menu"  Margin="10,10,308.2,340.8" Click="Back_To_Main_Menu_Left_Button_Click"  RenderTransformOrigin="0.5,0.5" Content="Main Menu" />
        <Button x:Name="Load"  Margin="10,84,308.2,266.8" Click="LoadText_Left_Click_Button"  RenderTransformOrigin="0.5,0.5" Content="Load Text" />
        <StackPanel Margin="27,133,31.2,28.8">
            <Label Content="Sensitivity:" Margin="128,0,134.8,0"/>
            <TextBlock x:Name="Sensitivity_Text" Text=""></TextBlock>
        </StackPanel>
        <Grid Margin="0,0,0.2,9.8">
            <ListView Margin="141,10,10,0" Name="Text_Block" RenderTransformOrigin="0.5,0.5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Text" Width="55" DisplayMemberBinding="{Binding Name}" />
                    </GridView>
                </ListView.View>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Name="Text_TextBlock" FontSize="20" Text="jksdfbdsjkbjds"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
            <ListView Margin="10,114,275,0" Name="Files_List">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="55" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Score" Width="45" DisplayMemberBinding="{Binding Age}" />
                    </GridView>
                </ListView.View>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                </Style>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>
